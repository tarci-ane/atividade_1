package atividade_1;

import javax.swing.JOptionPane;

public class principal extends funcionario{

	public static void main (String[] args) {
		
		gerente ge = new gerente();
		assistenteadministrativo aa = new assistenteadministrativo();
		assistentetecnico at = new assistentetecnico();

		
		int op;
		String nome;
		double salario;
		int matricula;
		
		
		for(;;) {
			
			op = Integer.parseInt(JOptionPane.showInputDialog("tipo de funcionario para cadastro: \n"
					+ "1- gerente\n"
					+ "2 - assistente admnistrativo\n"
					+ "3 - assistente tecnico\n"
					+ "4 - sair"));
			
			if (op==1) {
				
				nome = String.valueOf(JOptionPane.showInputDialog("qual o nome do gerente?\n"));
				salario = Double.parseDouble(JOptionPane.showInputDialog("qual é o salario?\n"));
				
				ge.setCargo("Gerente");
				ge.setNome(nome);
				ge.setSalario(salario);
				
				JOptionPane.showMessageDialog(null,"qual o nome do funcionario:\n"
						+ "nome:" + ge.getNome()+ "\n"
						+ "cargo:"+ ge.getCargo()+"\n"
						+ "Salario:" + ge.calculasalario());
								
			}
			
			else if (op==2) {
				nome = String.valueOf(JOptionPane.showInputDialog("qual o nome do assistente?\n"));
				salario = Double.parseDouble(JOptionPane.showInputDialog("qual é o salario?\n"));
				matricula = Integer.parseInt(JOptionPane.showInputDialog("qual a matricula:\n"));
				
				op = Integer.parseInt(JOptionPane.showInputDialog("qual o turno:\n"
						+ "1 - noturno\n"
						+ "2 - diurno\n"));
				
				if (op==1) {
					aa.setTurno("noturno");
				}
				
				else {
					aa.setTurno("diurno");
				}
						
				aa.setCargo("assistente administrativo");
				aa.setNome(nome);
				aa.setSalario(salario);
				aa.setMartricula(matricula);
				
				JOptionPane.showMessageDialog(null,"qual o nome do funcionario:\n"
						+ "nome:" + aa.getNome()+ "\n"
						+ "cargo:"+ aa.getCargo()+"\n"
						+ "matricula"+ aa.getMartricula()+"\n"
						+ "turno"+ aa.getTurno() +"\n"
						+ "Salario:" + aa.calculasalario());
				
				
			}
			else if (op==3) {
				nome = String.valueOf(JOptionPane.showInputDialog("qual o nome do assistente?\n"));
				salario = Double.parseDouble(JOptionPane.showInputDialog("qual é o salario?\n"));
				
				at.setCargo("assistente técnico");
				at.setNome(nome);
				at.setSalario(salario);
			
				
				JOptionPane.showMessageDialog(null,"qual o nome do funcionario:\n"
						+ "nome:" + at.getNome()+ "\n"
						+ "cargo:"+ at.getCargo()+"\n"
						+ "Salario:" + at.calculasalario());
			}
			
			else if (op==4) {
				JOptionPane.showMessageDialog(null, "finalizando");
				break;
			}
			
			else {
			JOptionPane.showMessageDialog(null, "opção invalida");	
			}
		}
		
		
	}
}
